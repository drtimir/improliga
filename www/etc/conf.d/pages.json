{
	"#":{
	},

	"intra":{
		"#":{
			"template":["intra/layout", "intra/dual"],
			"title":"Intranet Improligy",
			"modules":{
				"news":["impro/news/list", {"slot":"left"}],
				"cc":["impro/event/calendar_controls", {"slot":"right", "heading":"Kalendář"}],
				"cl":["impro/event/calendar", {"slot":"right", "heading":""}, ["cc"]]
			}
		},

		"login":{"#":{
			"template":["godmode/login"],
			"modules":[["intra/user/login"]]
		}},

		"logout":{"#":{
			"modules":[
				["intra/user/logout", {"redirect":"/"}]
			]
		}},

		"news":{
			"#":{},
			"*":{
				"#":{
					"modules":[
						["impro/news/list", {"slot":"right"}],
						["godmode/impro/news/detail", {"id":"#{0}", "slot":"left"}]
					]
				}
			}
		},

		"team":{
			"#":{},
			"*":{
				"#":{
					"title":"Můj tým",
					"template":["intra/layout", "intra/dual2"],
					"modules":[
						["impro/team/member_list", {"id_team":"#{0}", "slot":"right"}]
					]
				}
			}
		},

		"profile":{
			"#":{
				"title":"Můj profil",
				"modules":[
					["impro/user/profile", {"self":true, "slot":"left"}]
				]
			},
			"*":{
				"#":{
					"modules":[
						["impro/user/profile", {"id":"#{0}", "slot":"left"}]
					]
				}
			}
		},

		"discussion":{"#":{
			"title":"Diskuze",
			"template":["intra/layout", "intra/dual2"],
			"modules":[
				["impro/discussion/board_list", {"conds":{"public":true}, "slot":"left"}]
			]},

			"create_board":{"#":{
				"title":"Vytvořit nový obor témat",
				"modules":[
					["impro/discussion/board_edit", {"new":true, "slot":"left"}]
				]
			}},

			"*":{"#":{
				"title":"Seznam témat",
				"modules":[
					["impro/discussion/topic_list", {"id_board":"#{0}", "slot":"left"}]
				]},

				"edit":{"#":{
					"title":"Upravit obor",
					"modules":[
						["impro/discussion/board_edit", {"id":"#{0}", "slot":"left"}]
					]
				}},

				"delete":{"#":{

				}},

				"create_topic":{"#":{
					"title":"Vytvoření tématu",
					"modules":[
						["impro/discussion/topic_edit", {"id_board":"#{0}", "new":true, "slot":"left"}]
					]
				}},

				"*":{"#":{
					"modules":[
						["impro/discussion/post_add",  {"id_board":"#{0}", "id_topic":"#{1}", "slot":"discussion_post_form"}],
						["impro/discussion/post_list", {"id_board":"#{0}", "id":"#{1}", "slot":"left"}]
					]},

					"edit":{"#":{
						"title":"Upravit téma",
						"modules":[
							["impro/discussion/topic_edit", {"id_board":"#{0}", "id":"#{1}", "slot":"left"}]
						]
					}},

					"create_post":{"#":{
						"title":"Vytvoření příspěvku",
						"modules":[
							["impro/discussion/post_edit", {"new":true, "id_board":"#{0}", "id_topic":"#{1}", "slot":"left"}]
						]
					}}
				}
			}
		},


		"settings":{
			"#":{
				"template":["intra/layout", "intra/single"],
				"modules":[
					["intra/user/settings"]
				]
			}
		}
	}
}
