[
	["^/$", {
		"title":"Česká Improliga - divadlo jako hokejový zápas",
		"layout":["layout/public", "layout/public/paralax"],
		"modules":[
			["system/text/show", {"id":1}],
			["system/partial", {"template":"public/teams"}],
			["system/partial", {"template":"public/shows"}],
			["system/partial", {"template":"public/workshops"}],
			["system/partial", {"template":"public/media"}],
			["system/partial", {"template":"public/about"}],
			["system/partial", {"template":"public/contacts"}],
			["event/latest", {
				"conds":{"published":true},
				"thumb_width":216,
				"thumb_height":165,
				"per_page":4,
				"slot":"meta"
			}]
		]
	}, "home"],

	["^/tymy$", {
		"layout":["layout/public", "layout/public/single"],
		"modules":[
			["team/list"]
		]
	}, "teams"],

	["^/predstaveni$", {
		"modules":[
			["event/calendar", {
				"slot":"left",
				"template":"event/list/month",
				"link_day_piece":"den_{day}",
				"link_day":"/udalosti/seznam/{year}-{month}/#den_{day}"
			}]
		]
	}, "events"],

	["^/workshopy$", {
		"modules":[
			["event/calendar", {
				"slot":"left",
				"template":"event/list/month",
				"link_day_piece":"den_{day}",
				"link_day":"/udalosti/seznam/{year}-{month}/#den_{day}"
			}]
		]
	}, "workshops"],

	["^/udalosti/seznam/([^/]+)/$", {
		"modules":[
			["event/calendar", {
				"slot":"left",
				"template":"event/list/month",
				"link_day_piece":"den_{day}",
				"month_input":"#{0}",
				"conds":{"published":true}
			}]
		]
	}, "events_month"],

	["^/o-improlize$", {
		"title":"O Improlize",
		"layout":["layout/public", "layout/public/dual-34"],
		"modules":[
			["system/text/show", {"id":2, "slot":"left"}],
			["article/category/list", {"slot":"right"}]
		]
	}, "about"],

	["^/o-improlize/([^/]+)/$", {
		"layout":["layout/public", "layout/public/dual-34"],
		"modules":[
			["article/detail", {"id":"#{0}", "slot":"left"}],
			["article/category/list", {"slot":"right"}]
		]
	}, "article"],

	["^/kontakty$", {
		"title":"Kontakty - Česká Improliga",
		"modules":[
			["system/text/show", {"id":4, "slot":"left"}],
			["system/text/show", {"id":3, "slot":"right"}]
		]
	}, "contacts"],

	["^/fauly/$", {
		"title":"Fauly",
		"modules":[
			["impro/foul/list", {"slot":"right"}]
		]
	}, "fouls"],

	["^/fauly/([^/]+)/$", {
		"modules":[
			["impro/foul/detail", {"id":"#{0}", "slot":"left"}],
			["impro/foul/list", {"slot":"right"}]
		]
	}, "foul"],


	["^/o-improlize/([^/]+)/#([^/]+)$", {}, "article_chapter"],

	["^/media-o-improlize$", {
		"title":"impro_menu_media",
		"layout":["layout/public", "impro/single"],
		"modules":[
			["system/partial", {"template":"impro/static/media"}]
		]
	}, "media"],

	["^/tymy/([^/]+)/$", {
		"layout":["layout/public", "impro/single"],
		"modules":[
			["impro/team/detail", {"id":"#{0}"}]
		]
	}, "team"],

	["^/udalosti/([^/]+)/$", {
		"layout":["layout/public", "impro/single"],
		"modules":[
			["impro/event/detail", {
				"id":"#{0}",
				"col_width":440
			}]
		]
	}, "event"],

	["^/udalosti/([^/]+)/rezervace/$", {
		"layout":["layout/public", "impro/single"],
		"modules":[
		]
	}, "event_booking"],

	["^/intranet/$", {
		"modules":[
			["system/redirect", {"url":"http://intra.improliga.cz", "code":301}]
		]
	}, "intranet_redir"]
]
