	$months = $loc->get_path('date:months');
	$ren->content_for('title', $loc->trans('title_impro_global', $loc->trans('impro_event_list_for_month', $months[$month].' '.$year)));
	$content = array();
	$today = mktime(0,0,0,date('m'), date('d'), date('Y'));


.events.month
	!=$ren->heading($loc->trans('impro_event_list_for_month', $months[$month]))

	.controls
		!=$ren->label_for_url('events_month', $loc->trans('impro_prev_month'), 'godmode/navi/prev', 16, array("args" => array($prev->format('Y-m'))))
		!=$ren->label_for_left($ren->url('events_month', array($next->format('Y-m'))), $loc->trans('impro_next_month'), 'godmode/navi/next', 16)


	if any($events)
		each list,d in $events
			li.day
				:php
					$html = array();
					$html_events = array();
					$dutime = mktime(0,0,0, $month, $d, $year);
					$today_link = stprintf($link_day, array("year" => $year, "month" => str_pad($month, 2, '0', STR_PAD_LEFT), "day" => $d));
					$today_id = stprintf($link_day_piece, array("day" => $d));


				a(href=$today_link, id=$today_id).day-head
					if $today == $dutime
						!=$loc->trans('today')
					else
						!=$loc->format_date(mktime(0,0,0, $month, $d, $year), 'l j. F')

				ul.plain

					each event in $list
						li
							:php
								$html_event = array();
								$url = $ren->url('event', array($event));

							!=$ren->link($url, $event->image->to_html($ren, 100, 100), array("class" => 'image'))
							.desc
								!=$ren->link($url, $event->name, array("class" => 'name'))

								if ($event->type === \Impro\Event\Type::ID_MATCH && $event->team_home && $event->team_away)
									.match_participants
										!=$ren->link_for('team', $event->team_home->name, array("args" => array($event->team_home)))

										span.versus
											vs
										!=$ren->link_for('team', $event->team_away->name, array("args" => array($event->team_away)))

								.ts_location

									span.date=$loc->format_date($event->start, 'human')
									br
									span.etype=$loc->trans($event->get_type_name())

									if $event->location
										span.eloc
											,
											!=$ren->link_ext($event->location->map_link(), $event->location->name, array("class" => 'location'))

									.text!=to_html($ren->renderer, $event->desc_short)

	else
		p.info!=$loc->trans('impro_event_lists_empty')

