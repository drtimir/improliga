doctype html
html(lang=$loc->get_lang())
	head
		:php
			$ren->content_for('scripts', 'scripts/bundle/libs');
			$ren->content_for('scripts', 'scripts/bundle/public');

			$ren->content_for('styles', 'styles/bundle/common');
			$ren->content_for('styles', 'styles/bundle/public');

			$ren->content_for('title', $loc->trans('impro_name').' - '.$loc->trans('impro_name_desc'));
			$ren->content_from('head');

		link(rel="icon",type="image/ico",href="/favicon.ico")
		link(rel="icon",type="image/png",href="/favicon.png")

	body
		#meta
			header
				.inner
					.site-icon
						.site-name
							.name=$loc->trans('impro_name')
							.desc=$loc->trans('impro_name_desc')

						a.logo(href=$ren->url('home'))

					.main-menu-container
						.main-menu-center
							ul.main-menu#main-menu
								li!=$ren->link_for('home', $loc->trans('impro_menu_home'), array("class" => 'menu-home'))
								li!=$ren->link_for('about', $loc->trans('impro_menu_about'), array("class" => 'menu-about'))
								li!=$ren->link_for('events', $loc->trans('impro_menu_shows'), array("class" => 'menu-shows'))
								li!=$ren->link_for('teams', $loc->trans('impro_menu_teams'), array("class" => 'menu-teams'))
								li!=$ren->link_for('workshops', $loc->trans('impro_menu_workshops'), array("class" => 'menu-workshops'))
								li!=$ren->link_for('media', $loc->trans('impro_menu_media'), array("class" => 'menu-media'))
								li!=$ren->link_for('contacts', $loc->trans('impro_contact'), array("class" => 'menu-contact'))
			#data
				:php
					$ren->slot();

		#ui
			#viewport

		include ../partial/ga.jade
